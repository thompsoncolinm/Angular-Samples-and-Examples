{
  "projects": {
    "your-project-name": {
      "architect": {
        "build": {
          "options": {
            "scripts": [
              "node_modules/tailwindcss/lib/cli.js",
              "-i", "src/styles.css",
              "-o", "dist/styles.css",
              "--minify"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "150kb",
                  "maximumError": "150kb"
                }
              ]
            }
          }
        }
      }
    }
  }
}